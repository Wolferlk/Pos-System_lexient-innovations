{
  "name": "captain-cafe-pos",
  "version": "1.0.0",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev --prefix desktop-app/client\" \"npm run dev --prefix server\" \"wait-on http://localhost:5173 && electron .\"",
    "build:client": "npm run build --prefix desktop-app/client",
    "build": "npm run build:client",
    "dist": "npm run build && electron-builder --win nsis"
  },
  "build": {
    "appId": "com.captaincafe.pos",
    "productName": "CaptainCafePOS",
    "asar": true,
    "extraResources": [
      {
        "from": "server",
        "to": "server",
        "filter": [
          "**/*",
          "!node_modules/.cache/**"
        ]
      },
      {
        "from": "desktop-app/client/dist",
        "to": "client-dist",
        "filter": [
          "**/*"
        ]
      }
    ],
    "files": [
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.0",
    "wait-on": "^7.0.1"
  }
}
